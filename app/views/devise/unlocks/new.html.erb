<div class="section">
  <div class="container">
    <div class="columns is-centered">
    
    <div class="column is-4">

      <h2 class="title is-2">Resend unlock instructions</h2>

<%= simple_form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post }) do |f| %>
  <%= f.error_notification %>
  <%= f.full_error :unlock_token %>



    <div class="field">
    <div class="control">
    <%= f.input :email,
    required: true,
    autofocus: true,
    input_html: { autocomplete: "email" }, input_html: { class: "input" }, wrapper: false,
    label_html: {class:"label"} %>
    </div>
  </div>
    
  <div class="field">
  <div class="control">  
  <%= f.button :submit, "Resend unlock instructions", class:"button is-info is-medium" %>
  </div>
</div>


    <% end %>

<%= render "devise/shared/links" %>

</div>
</div>
</div>
</div>

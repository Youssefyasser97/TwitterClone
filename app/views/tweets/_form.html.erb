<%= simple_form_for(@tweet) do |f| %>
  <%= f.error_notification %>
  <div class="field">
  <div class="control">
  <%= f.input :tweet, label:"Tweety says:", input_html: {class:"textarea"}, wrapper:false, label_html: {class:"label"},
   placeholder:"What's on your mind?", autofocus: true %>
  </div>
  </div>
    <%= f.submit 'Tweet', :class => 'button is-info' %>
<% end %>
